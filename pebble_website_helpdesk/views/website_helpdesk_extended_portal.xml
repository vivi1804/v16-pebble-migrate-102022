<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_helpdesk_ticket_form_extended_team_1" inherit_id="website_helpdesk.team_form_1" name="Website Helpdesk Ticket Form Extended">
        <xpath expr="//form[@id='helpdesk_ticket_form']" position="replace">
            <form id="helpdesk_ticket_form" action="/website/form/" method="post" class="container-fluid mt32 o_fake_not_editable s_website_form" enctype="multipart/form-data" data-name="Form Builder" data-model_name="helpdesk.ticket" data-success_page="/your-ticket-has-been-submitted">
                <div class="form-group row form-field o_website_form_required">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="postcode">Postcode</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pb16">
                        <input type="text" class="form-control o_website_form_input" name="postcode" required="1"/>
                    </div>
                </div>
                <div class="form-group row form-field o_website_form_required">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="huisnummer">Huisnummer</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pb16">
                        <input type="text" class="form-control o_website_form_input" name="huisnummer" required="1"/>
                    </div>
                </div>
                <div class="form-group row form-field o_website_form_required">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="ticket_type_id">Ticket Type</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pt0 pb16">
                        <select class="form-control" name="ticket_type_id" required="1">
                            <t t-foreach="types" t-as="ticket_type">
                            <option t-att-value="ticket_type.id">
                                <t t-esc="ticket_type.name"/>
                            </option>
                            </t>
                        </select>
                    </div>
                </div>
                <div class="form-group row form-field o_website_form_required">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="partner_name">Your Name</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pb16">
                        <input type="text" class="form-control o_website_form_input" name="partner_name" required="1"/>
                    </div>
                </div>
                <div class="form-group row form-field o_website_form_required">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="partner_email">Your Email</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pb16">
                        <input type="email" class="form-control o_website_form_input" name="partner_email" required="1"/>
                    </div>
                </div>
                <div class="form-group row form-field o_website_form_required">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="name">Subject</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pb16">
                        <input type="text" class="form-control o_website_form_input" name="name" required="1"/>
                    </div>
                </div>
                <div class="form-group row form-field">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="description">Description</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pt0 pb16">
                        <textarea class="form-control o_website_form_input" name="description"/>
                    </div>
                </div>
                <div class="form-group row form-field">
                    <div class="col-lg-4 col-md-4 text-right">
                        <label class="col-form-label" for="attachments">Attachment(s)</label>
                    </div>
                    <div class="col-lg-7 col-md-8 o_colored_level pb16">
                        <input type="file" name="attachments" class="form-control o_website_form_input" multiple="true" accept="image/*,application/pdf,video/*"/>
                    </div>
                </div>
                <div class="form-group row form-field d-none">
                    <div class="col-lg-4 col-md-4">
                        <label class="col-form-label" for="team_id">Team</label>
                    </div>
                    <div class="col-lg-7 col-md-8">
                        <input type="hidden" class="form-control o_website_form_input" name="team_id"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-lg-4 offset-md-4 col-md-8 col-lg-7 o_colored_level pt16">
                        <button type="submit" class="btn btn-primary btn-lg o_website_form_send">Send</button>
                        <span id="o_website_form_result"/>
                    </div>
                </div>
            </form>
        </xpath>
    </template>

</odoo>