<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="enphase_images_form" name="Sales Configuration: Upload Enphase Images">
        <t name="Sales Configurator Images" priority="29" t-name="sales.configurator.images">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container mt32">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 text-center">
                                <h1> Enphase Images Upload </h1>

                                <div class="form-group row form-field o_website_form_required mt0 mb0">
                                        <div class="col-lg-12 col-md-12 text-center" id="lead_txt">
                                        
                                        </div>
                                    </div>

                                <form id="enphase_images_form" action="/website_form/" method="post" class="s_website_form o_wprofile_editor_form container-fluid mt32" enctype="multipart/form-data" data-model_name="sales.configurator" data-success_page="/your-entries-has-been-submitted" data-editable-form="false" hide-change-model="true">
                                    <t t-set="user" t-value="default_values['user_id']"/>
                                    <input type="hidden" name="verkoper" t-att-value="user"/>
                                    <input type="hidden" name="sales_configurator_type" t-att-value="types.id"/>
                                    <div class="form-group row form-field o_website_form_required">
                                        <div class="col-lg-3 col-md-4 text-right">
                                            <label class="col-form-label" for="postcode">Postcode</label>
                                        </div>
                                        <div class="col-lg-7 col-md-8">
                                            <input type="text" class="form-control o_website_form_input" name="postcode" id="postcode" required="1"
                                            placeholder="Bijv. 4811ZA" pattern="[0-9]{4}[A-Za-z]{2}" title="Vul de postcode in zonder streepjes bijvoorbeeld 4811AA"/>
                                        </div>
                                    </div>
                                    <div class="form-group row form-field o_website_form_required">
                                        <div class="col-lg-3 col-md-4 text-right">
                                            <label class="col-form-label" for="huisnummer">Huisnummer</label>
                                        </div>
                                        <div class="col-lg-7 col-md-8">
                                            <input type="text" class="form-control o_website_form_input" name="huisnummer" id="huisnummer" required="1"
                                            placeholder="Alleen huisnummer zonder toevoeging" pattern="[0-9]{}"/>
                                        </div>
                                    </div>
                                    <div class="form-group row form-field">
                                        <div class="col-lg-3 col-md-4 text-right">
                                            <label class="col-form-label" for="legplan">Legplan</label>
                                        </div>
                                        <div class="col-lg-7 col-md-8">
                                            <input type="file" name="legplan" class="form-control o_website_form_input" accept="image/*"/>
                                        </div>
                                    </div>
                                    <div class="form-group row form-field">
                                        <div class="col-lg-3 col-md-4 text-right">
                                            <label class="col-form-label" for="attachments">Bijlage(n)</label>
                                        </div>
                                        <div class="col-lg-7 col-md-8">
                                            <input type="file" name="attachments" class="form-control o_website_form_input" multiple="true" accept="image/*"/>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                            <button type="submit" id="submit" class="btn btn-primary btn-lg o_website_form_send o_default_snippet_text">Send</button>
                                            <span id="o_website_form_result"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="pebble_sales_configurator.entries_submited" name="Entries Submitted">
         <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <div class="container">
                    <div clas="row mt32 mb32">
                        <h1 class="text-center"><i class="fa fa-check-circle fa-2x text-success" role="img" aria-label="Success" title="Success"/></h1>
                        <h1 class="text-center">Your entries has been submitted</h1>
                    </div>
                </div>
            </div>
         </t>
    </template>

    <record id="aboutus_page" model="website.page">
        <field name="is_published">True</field>
        <field name="url">/your-entries-has-been-submitted</field>
        <field name="website_indexed" eval="False"/>
        <field name="view_id" ref="entries_submited" />
    </record>

</odoo>
