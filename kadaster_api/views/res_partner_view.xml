<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_parner_view_kadaster_api">
        <field name="name">res_parner_view_kadaster_api</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="kadaster_api_page" string="Kadaster">
                    <group>
                        <group>
                            <field name="datum"/>
                            <field name="verblijfsobject"/>
                            <field name="gebruiksdoel"/>
                            <button name="action_get_kadaster_data" type="object" string="Get Data"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
