<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_kadaster" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.kadaster.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Kadaster API" string="Kadaster API" data-key="kadaster_api">
                    <div id="kadaster_api">
                        <h2>Kadaster API</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="kadaster_api_setting">
                                <div class="o_setting_left_pane">
                                    <field name="run_on_test"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Run on Test" for="run_on_test"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="kadaster_api_token">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Kadaster API Token</span>
                                    <div class="text-muted">
                                        API Token for kadaster
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label class="o_light_label col-lg-3" string="Token (test)" for="api_key_test"/>
                                            <field name="api_key_test" attrs="{'invisible': [('run_on_test', '=', False)], 'required': [('run_on_test', '=', True)]}"/>
                                        </div>
                                        <div class="row mt16">
                                            <label class="o_light_label col-lg-3" string="Token (live)" for="api_key_live"/>
                                            <field name="api_key_live" attrs="{'invisible': [('run_on_test', '=', True)], 'required': [('run_on_test', '=', False)]}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>          
            </xpath>                          
        </field>
    </record>                
</odoo>    