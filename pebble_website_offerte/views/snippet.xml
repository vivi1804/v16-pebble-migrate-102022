<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="daytime_snippet_id" inherit_id="website.snippets" name="Daytime Snippet id">
            <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
                <t t-snippet="website_daytime.daytime_snippet" t-thumbnail="/website_daytime/static/src/img/thumbnail.jpg"/>
            </xpath>
        </template>

        <template id="daytime_snippet" name="Daytime Snippet">
            <section style="background-color: #88b028;">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 pb0 pt8">
                            <style class="o_default_snippet_text">
                                #website_daytime_container h2{
                                    text-transform: uppercase;
                                    font-weight: bold;
                                    font-size: 14px;
                                    margin: 5px 10px 0 0;
                                    color: black;
                                    border-radius: 3px;
                                    padding: 3px 0px;
                                }

                                #website_daytime_container .time{
                                    color: black;
                                    display: block;
                                    font-size: 90%;
                                    line-height: 110%;
                                }            
                            </style>

                            <div id="website_daytime_container">
                                <div class="row mt8">
                                    <div class="col-lg-1"/>
                                    <div class="col-lg-2">
                                        <div class="row">
                                        <div class="col-3 mt8 text-right">
                                            <img src="/website_daytime/static/src/img/calendar.png" style="width: 40px;" alt="Date"/>
                                        </div>
                                        <div class="col-9 text-left text-black">
                                            <h2 class="o_default_snippet_text"><span id="daytime_day"/>, </h2>
                                            <p class="time" id="daytime_date"/>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="row">
                                        <div class="col-1 mt8"/>
                                        <div class="col-3 mt8 text-right">
                                            <img src="/website_daytime/static/src/img/sunrise.svg" style="width: 60px;" alt="Sunrise"/>
                                        </div>
                                        <div class="col-7 text-left text-black">
                                            <h2 class="o_default_snippet_text text-left"> zonsopgang:  </h2>
                                            <p class="time" id="daytime_sunrise"/>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="row">
                                        <div class="col-3 mt8 text-right">
                                            <img src="/website_daytime/static/src/img/sunset.svg" style="width: 60px;" alt="Sunset"/>
                                        </div>
                                        <div class="col-9 text-left text-black">
                                            <h2 class="o_default_snippet_text text-left"> zonsondergang:  </h2>
                                            <p class="time" id="daytime_sunset"/>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="row">
                                        <div class="col-3 mt8 text-right">
                                            <img src="/website_daytime/static/src/img/daylength.png" style="width: 40px;" alt="Daylength"/>
                                        </div>
                                        <div class="col-9 text-left text-black">
                                            <h2 class="o_default_snippet_text text-left"> zonuren:  </h2>
                                            <p class="time" id="daylength"/>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>

