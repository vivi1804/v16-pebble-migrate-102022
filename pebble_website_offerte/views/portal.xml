<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WEBSITE MENU -->
     <record id="pebble_website_offerte" model="website.menu">
        <field name="name">Offerte</field>
        <field name="url">/offerte</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
        <!-- <field name="group_ids" eval="[(4, ref('pebble_sales_configurator.group_webportal_sales'))]"/> -->
    </record>

    <function model="ir.model.fields" name="formbuilder_whitelist">
        <value>crm.lead</value>
        <value eval="[
            'x_studio_titel',
            'x_studio_voornaam',
            'x_studio_achternaam',
            'x_studio_postcode',
            'x_studio_huisnummer',
            'x_studio_dak_orientatie',
            'x_studio_investeringsredenen',
            'x_studio_energie_verbruik_per_jaar',
            'x_studio_zonnepanelen_',
            'x_studio_infraroodverwarming_',
            'x_studio_laadpaal_',
            'medium_id',
            'name',
        ]"/>
    </function>

    <template id="offerte" name="Offerte">
        <t name="Offerte" priority="29" t-name="crm.lead">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container mt8 mb8">
                        <form id="pebble_offerte_form" action="/website/form/" method="post" class="container-fluid mt32 o_fake_not_editable s_website_form" enctype="multipart/form-data" data-name="Form Builder" data-model_name="crm.lead" data-success_page="/offerte-thankyou">
                            <div class="container">
                                <h1 class="o_fake_editable o_form_heading">Vrijblijvend een offerte aanvragen?</h1>
                                <p>Vraag vrijblijvend een offerte aan of maak een afspraak met een van onze adviseurs voor een advies op maat. Wij proberen u zo goed mogelijk te adviseren op uw situatie. Vul hieronder uw gegevens in zodat we contact op kunnen nemen voor een eventuele afspraak.</p>
                                <group>
                                    <div class="d-none form-field form-group row o_website_form_recaptcha">
                                        <div class="col-lg-7 col-md-8">
                                            <input type="text" class="form-control o_website_form_input" name="team_id" value="1"/>
                                        </div>
                                        <div class="col-lg-7 col-md-8">
                                            <input type="text" class="form-control o_website_form_input" name="name" value="Aanvraag via de website"/>
                                        </div>
                                    </div>
                                </group>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-6 pb0 pt32">
                                            <div class="form-field form-group row">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <select class="form-control o_website_form_input" name="x_studio_dak_orientatie" required="false" tabindex="1">
                                                        <option value="">Wat is de dak orientatie?</option>
                                                        <option value="Noord">Noord</option>
                                                        <option value="Oost">Oost</option>
                                                        <option value="Zuid">Zuid</option>
                                                        <option value="West">West</option>
                                                        <option value="Zuid-West">Zuid-West</option>
                                                        <option value="Zuid-Oost">Zuid-Oost</option>
                                                        <option value="Geen idee">Geen idee</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-field form-group row">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <select class="form-control o_website_form_input" name="x_studio_investeringsredenen" required="false" tabindex="2">
                                                        <option value="">Wat is voor u de voornaamste reden om te investeren in zonnepanelen?</option>
                                                        <option value="Rendement">Rendement</option>
                                                        <option value="Eigen energie opwekken, Maandelijkse lasten verminderen">Eigen energie opwekken, Maandelijkse lasten verminderen</option>
                                                        <option value="Milieu (duurzaamheid) - Bijdrage aan de wereld">Milieu (duurzaamheid) - Bijdrage aan de wereld</option>
                                                        <option value="Groener energielabel">Groener energielabel</option>
                                                        <option value="Waarde stijging van mijn woning">Waarde stijging van mijn woning</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 pb0 pt32">
                                            <div class="form-field form-group row o_fake_not_editable o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <input type="number" placeholder="Wat is uw huidige verbruik in kWh/jaar? Indien onbekend vul dan 0 in" class="form-control o_website_form_input" name="x_studio_energie_verbruik_per_jaar" step="1" required="" tabindex="3"/>
                                                </div>
                                            </div>
                                            <div class="form-field form-group row">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <select class="form-control o_website_form_input" name="medium_id" required="false" tabindex="4">
                                                        <option value="">Hoe bent U terecht gekomen bij Pebble Green Systems?</option>
                                                        <option value="1">Via een bestaande klant</option>
                                                        <option value="2">Via een bekende</option>
                                                        <option value="3">Via ONE (Oosterhout Nieuwe Energie)</option>
                                                        <option value="4">Via Sunpower</option>
                                                        <option value="5">Via een markt/beurs</option>
                                                        <option value="6">Geen van de bovenstaande</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 pt0 pb16">
                                            <div style="margin-bottom: 0px;">
                                                <span>Ik heb intresse in:</span>
                                            </div>
                                            <div class="form-field form-group o_fake_not_editable row" style="margin-bottom: 0px;">
                                                <div class="col-lg-1 col-md-2">
                                                    <input type="checkbox" value="Yes" class="o_website_form_input" name="x_studio_zonnepanelen_" tabindex="5"/>
                                                </div>
                                                <div class="col-lg-9 col-md-10">
                                                    <label class="col-form-label o_fake_editable" style="padding-bottom: 0px;padding-top: 0px; font-weight: 100;" for="x_studio_zonnepanelen_">Zonnepanelen</label>
                                                </div>
                                            </div>
                                            <div class="form-field form-group o_fake_not_editable row" style="margin-bottom: 0px;">
                                                <div class="col-lg-1 col-md-2">
                                                    <input type="checkbox" value="Yes" class="o_website_form_input" name="x_studio_infraroodverwarming_" tabindex="6"/>
                                                </div>
                                                <div class="col-lg-9 col-md-10">
                                                    <label class="col-form-label o_fake_editable" style="padding-bottom: 0px;padding-top: 0px; font-weight: 100;" for="x_studio_infraroodverwarming_">Infraroodverwarming</label>
                                                </div>
                                            </div>
                                            <div class="form-field form-group o_fake_not_editable row">
                                                <div class="col-lg-1 col-md-2">
                                                    <input type="checkbox" value="Yes" class="o_website_form_input" name="x_studio_laadpaal_" tabindex="7"/>
                                                </div>
                                                <div class="col-lg-9 col-md-10">
                                                    <label class="col-form-label o_fake_editable" style="padding-bottom: 0px;padding-top: 0px; font-weight: 100;" for="x_studio_laadpaal_">Laadpaal</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 pb0">
                                            <textarea class="form-control o_website_form_input" placeholder="Opmerkingen, indien via een bekende graag vermelden via wie" name="description" required="" style="margin-top: 0px; margin-bottom: 0px; height: 137px;" tabindex="8"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 pb0 pt0">
                                            <div class="form-field form-group o_fake_not_editable o_website_form_required_custom row"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 pb0 pt0">
                                            <div class="form-field form-group o_fake_not_editable row o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <select class="form-control o_website_form_input" name="x_studio_titel" required="" placeholder="De heer of Mevrouw" tabindex="9">
                                                        <option value="3">De heer</option>
                                                        <option value="1">Mevrouw</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-field form-group o_fake_not_editable row o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <input type="text" class="form-control o_website_form_input" placeholder="Uw voornaam" name="x_studio_voornaam" required="" tabindex="10"/>
                                                </div>
                                            </div>
                                            <div class="form-field form-group row o_fake_not_editable o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <input type="text" class="form-control o_website_form_input" placeholder="Uw achternaam" name="x_studio_achternaam" required="" tabindex="11"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 pb0 pt0">
                                            <div class="form-field form-group row o_fake_not_editable o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <input type="text" class="form-control o_website_form_input" placeholder="Postcode" name="x_studio_postcode" required="" tabindex="12"/>
                                                </div>
                                            </div>
                                            <div class="form-field form-group o_fake_not_editable row o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <input type="text" class="form-control o_website_form_input" placeholder="Huisnummer" name="x_studio_huisnummer" required="" tabindex="13"/>
                                                </div>
                                            </div>
                                            <div class="form-field form-group o_fake_not_editable row o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <input type="text" class="form-control o_website_form_input" placeholder="Telefoonnummer" name="phone" required="" tabindex="14"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 pb0 pt0">
                                            <div class="form-field form-group row o_fake_not_editable o_website_form_required_custom">
                                                <div class="col-lg-12 col-md-12 pb16">
                                                    <input type="text" class="form-control o_website_form_input" placeholder="E-mailadres" name="email_from" required="" tabindex="15"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-5 col-md-6 offset-lg-5 offset-md-6 pt16 pb16">
                                    <button class="btn btn-lg btn-primary o_website_form_send" style="position: relative; overflow: hidden;" tabindex="16">Verzenden</button>
                                    <span id="o_website_form_result"/>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="offerte_thankyou" model="website.page">
       <field name="name">Offerte - Thank You</field>
       <field name="type">qweb</field>
       <field name="url">/offerte-thankyou</field>
       <field name="website_indexed" eval="False"/>
       <field name="is_published">True</field>
       <field name="key">pebble_website_offerte.offerte_thankyou</field>
       <field name="arch" type="xml">
           <t name="Offerte - Thank you" t-name="offerte_thankyou">
               <t t-call="website.layout">
                   <div class="container">
                       <h1>Hello, Thank You!</h1>
                       <p>Your Request has been submitted</p>
                   </div>
               </t>
           </t>
       </field>
   </record>
</odoo>