<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--PRODUCT FORM-->
    <record model="ir.ui.view" id="website_product_information_form">
        <field name="name">website_product_information_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div/h1" position="after">
                
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="website_sheets" string="Website Information">
                    <group>
                        <group>
                            <field name="published"/>
                            <field name="website_category_ids" widget="many2many_tags" options="{'no_create': True}" string="Category" placeholder="website categories..."/>
                        </group>
                        <group/>
                    </group>
                    <group string="Short Description">
                        <field name="short_description" nolabel="1" colspan="2"/>
                    </group>
                    <group string="Long Description">
                        <field name="long_description" nolabel="1" colspan="2"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- VIEW -->
    <!--    TREE VIEW -->
    <record id="website_product_category_view" model="ir.ui.view">
        <field name="name">website_product_category_tree</field>
        <field name="model">website.product.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!--SEARCH VIEW-->
    <record model="ir.ui.view" id="website_product_category_filter">
        <field name="name">website_product_category_filter</field>
        <field name="model">website.product.category</field>
        <field name="arch" type="xml">
            <search string="Website Product Category">
                <field name="name" filter_domain="[('name','ilike', self)]"/>
            </search>
        </field>
    </record>

    <!--FORM VIEW-->
    <record model="ir.ui.view" id="website_product_category_form">
        <field name="name">website_product_category_form</field>
        <field name="model">website.product.category</field>
        <field name="arch" type="xml">
            <form name="website_product_category_form">
                <sheet string="Website Product Category" name="website_product_category_sheet">
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--ACTION -->
    <record model="ir.actions.act_window" id="action_website_product_category_tree_view">
        <field name="name">Website Product Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">website.product.category</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <!--ACTION BIND-->
    <!--    TREE -->
    <record model="ir.actions.act_window.view" id="action_website_product_category_mode">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="action_website_product_category_tree_view"/>
    </record>

    <!--FORM-->
    <record model="ir.actions.act_window.view" id="action_website_product_category_form_mode">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="action_website_product_category_tree_view"/>
        <field name="view_id" ref="website_product_category_form"/>
    </record>
</odoo>
